<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#616161</item>
        <item name="colorPrimaryDark">#424242</item>
        <item name="colorAccent">#BDBDBD</item>
    </style>

    <!-- Question header text. -->
    <style name="questions">
        <item name="android:textSize">24sp</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:textColor">#212121</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
    </style>

    <!-- Actual question test. -->
    <style name="question_text">
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:layout_marginBottom">4dp</item>
        <item name="android:textColor">#616161</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
    </style>

    <!-- Checkboxes and radio buttons. -->
    <style name="radio_button">
        <item name="android:buttonTint">#BDBDBD</item>
        <item name="android:textColor">#616161</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:layout_marginRight">8dp</item>
    </style>

</resources>
